<.header>
  Kanban Boards
  <:subtitle>Manage your team workflows</:subtitle>
</.header>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
  <%= for board <- @boards do %>
    <.link navigate={~p"/boards/#{board}"} class="block">
      <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6 border border-gray-200">
        <h3 class="text-xl font-semibold mb-2"><%= board.name %></h3>
        <p class="text-gray-600">Team: <%= board.team.name %></p>
        <div class="mt-4 text-blue-600 font-medium">
          View Board â†’
        </div>
      </div>
    </.link>
  <% end %>
</div>

<%= if @boards == [] do %>
  <div class="text-center py-12">
    <p class="text-gray-500 text-lg">No boards available for your team yet.</p>
  </div>
<% end %>
